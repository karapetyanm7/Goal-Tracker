<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_icon"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="Back"
            android:tint="@color/text_primary" />

        <TextView
            android:id="@+id/statsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Statistics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/statsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/stats_border"
            android:padding="16dp">

            <TextView
                android:id="@+id/weeklyStatsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Completed Habits: 0"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/monthlyStatsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly Completed Habits: 0"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/longestStreakTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longest Streak: 0 days"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />
                
            <TextView
                android:id="@+id/totalPointsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Points Earned: 0"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />
                
            <TextView
                android:id="@+id/completionRateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Completion Rate: 0.0% weekly, 0.0% monthly"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />
                
            <TextView
                android:id="@+id/mostConsistentHabitTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Consistent Habit: None"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />
                


        </LinearLayout>
    </ScrollView>
</LinearLayout>