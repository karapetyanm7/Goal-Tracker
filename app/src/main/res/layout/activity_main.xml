<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/statsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/stats_icon"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="View Statistics"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/calendarButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/calendar_icon"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="Calendar View"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/reminderButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/clock_icon"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="Set Reminder"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/themeToggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/dark_icon"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="Toggle Theme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Add Habit" />

        <ListView
            android:id="@+id/habitListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
