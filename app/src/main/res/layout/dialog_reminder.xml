<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set a reminder for habits"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/everydayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Everyday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/mondayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Monday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/tuesdayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Tuesday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/wednesdayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Wednesday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/thursdayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Thursday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/fridayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Friday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/saturdayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Saturday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/sundayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Sunday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/tomorrowCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only For Tomorrow"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/todayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only For Today"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />
        </LinearLayout>
    </ScrollView>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:theme="@style/TimePickerBlackText" />

</LinearLayout>