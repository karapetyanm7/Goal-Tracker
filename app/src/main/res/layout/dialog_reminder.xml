<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set a reminder for habits"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Type"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/specificHabitCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For Specific Habit"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/selectHabitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Habit"
                    android:backgroundTint="@color/primary"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/everydayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Everyday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/mondayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Monday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/tuesdayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Tuesday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/wednesdayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Wednesday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/thursdayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Thursday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/fridayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Friday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/saturdayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Saturday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/sundayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Every Sunday"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/tomorrowCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only For Tomorrow"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/todayCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Only For Today"
                android:textSize="16sp"
                android:textColor="#000000"
                android:padding="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TimePicker
                    android:id="@+id/timePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:theme="@style/TimePickerBlackText" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>